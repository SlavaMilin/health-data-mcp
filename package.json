{
  "name": "health-data-mcp",
  "version": "1.0.0",
  "description": "MCP server for health data stored in SQLite",
  "type": "module",
  "main": "bin/stdio.ts",
  "scripts": {
    "import-health": "tsx bin/import-health.ts",
    "start": "tsx bin/stdio.ts",
    "start:stdio": "tsx bin/stdio.ts",
    "start:server": "tsx bin/server.ts",
    "dev": "tsx --watch bin/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.js",
    "test:all": "pnpm test:unit && pnpm test:integration",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.26.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ],
    "ignoredBuiltDependencies": [
      "sqlite3"
    ]
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.20",
    "@fastify/cors": "10.0.1",
    "@fastify/formbody": "^8.0.2",
    "@modelcontextprotocol/sdk": "1.25.1",
    "@resolid/keyv-sqlite": "^5.0.1",
    "better-sqlite3": "12.5.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fastify": "5.6.2",
    "keyv": "^5.5.5",
    "migration-files": "^0.4.3",
    "tsx": "^4.21.0",
    "zod": "4.3.4"
  },
  "bin": {
    "health-data-mcp": "./bin/stdio.js",
    "health-data-server": "./bin/server.js",
    "import-health": "./bin/import-health.js"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
